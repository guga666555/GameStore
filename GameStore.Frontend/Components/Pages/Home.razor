@page "/"
@inject GamesClients Client
@attribute [StreamRendering]

<PageTitle>Game Catalog</PageTitle>

@if (games is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h2>Statistics & Reports</h2>
    <div class="dashboard-card">
        <div class="cards">
            <h6 class="title">Members Progress</h6>
            <h6 class="amount">$54.567.00</h6>
            <div class="badger">
                <span class="text-bg">+6.85%</span>
                <span class="badger-text">Since Last Year</span>
            </div>
        </div>
        <div class="cards">
            <h6 class="title">Taxes Paid</h6>
            <h6 class="amount">$11.345.12</h6>
            <div class="badger">
                <span class="text-bg">+6.85%</span>
                <span class="badger-text">Since Last Year</span>
            </div>
        </div>
        <div class="cards">
            <h6 class="title">Total Clients</h6>
            <h6 class="amount">543</h6>
            <div class="badger">
                <span class="text-bg">+11.67%</span>
                <span class="badger-text">Since Last Year</span>
            </div>
        </div>
        <h2 class="title">Products List</h2>
        <div style="overflow-x: auto;">
            <table id="posts">
                <thead>
                    <tr>
                        <th style="width: 1%;">Id</th>
                        <th style="width: 5%;">ProductType</th>
                        <th style="width: 10%;">Name</th>
                        <th style="width: 5%;">Price</th>
                        <th style="width: 5%;">ReleaseDate</th>
                        <th style="width: 5%;">Genre</th>
                        <th style="width: 5%;">Plataform</th>
                        <th style="width: 1%;">Picture</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in games)
                    {
                        <tr>
                            <td>@game.Id</td>
                            <td>@game.ProductType</td>
                            <td>@game.Name</td>
                            <td>@game.Price</td>
                            <td>@game.ReleaseDate</td>
                            <td>@game.Genre</td>
                            <td>@game.Plataform</td>
                            <td>@game.Picture</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <footer>
        <div class="foot-wrap">
            <div class="copyright-text">
                <p>©Copyright 2024 by <strong>Guga Industries™</strong></p>
            </div>
            <ul class="social-icons">
                <li><a href="#">Facebook</a></li>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">LinkedIn</a></li>
            </ul>
        </div>
    </footer>

    <style>
        .dashboard-card {
            grid-template-columns: repeat(1, 1fr);
            margin: 1rem 0;
            display: grid;
            gap: 2rem;
        }

        .cards {
            background-color: #eff2f7;
            max-width: 450px;
            padding: 1.5rem 1rem;
            color: #3e4455;
            border-radius: 5px;
            transition: .4s;
            cursor: pointer;
        }

        .title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .amount {
            font-weight: 400;
            font-size: 1rem;
        }

        .cards:hover {
            background: #6e00ff;
            color: #fff;
            transform: translateY(-10.5px);
        }

        .text-bg {
            background-color: #36b37e;
            padding: 0.25rem 0.35rem;
            margin-right: 0.375rem;
            font-size: 0.715rem;
            color: white;
            border-radius: 5px;
        }

        .badger-text {
            font-weight: 400;
            font-size: 0.85rem;
        }

        #posts {
            border-collapse: collapse;
            margin: 30px auto;
            width: 100%;
        }

        #posts thead tr {
            color: white;
            text-align: left;
            background-color: #6e00ff;
        }

        #posts th,
        #post td {
            padding: 12px 15px;
        }

        #posts tbody tr:nth-of-type(2n) {
            background-color: #eff2f7;
        }

        .footer-wrap {
            display: flex;
            flex-wrap: wrap;
            white-space: nowrap;
            align-items: center;
            overflow-x: auto;
            justify-content: space-between;
            background-color: white;
            padding: 1rem 2rem;
        }

        .copyright-text {
            color: gray;
        }

        .social-icons {
            display: none;
        }

        @@media(min-width:768px) {
            .dashboard-navbar form {
                display: block;
                max-width: 320px;
            }
        }

        .nav-search {
            display: flex;
            flex-wrap: wrap;
        }

        .nav-search .search-query {
            flex: 1 1 auto;
            width: 1%;
            height: calc(1.5rem + .9rem + 2px);
            padding: 0 20px;
            border: none;
            color: #3e4455;
            family: 'Poppins', sans-serif;
        }

        .nav-search .search-query: :focus-visible {
            outline: none;
        }

        .nav-search .btn {
            border: 0;
            background-color: #6e00ff;
            color: white;
            padding: .45rem .9rem;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            cursor: pointer;
        }

        .dashboard-card {
            grid-template-columns: columns: repeat(3, 1);
        }

        .social-icons li:not(:last-child) {
            margin-right: 0.5rem;
            border-right: 1PX solid #3e4455;
            padding-right: .7rem;
        }

        .social-icons li {
            display: inline-block;
        }

        .social-icons li a {
            color: #3e4455;
        }
    </style>
}

@code {
    private GameSummary[]? games;
    private static string GameUrl(int id) => $"/editgame/{id}";

    protected override async Task OnInitializedAsync()
    {
        games = await Client.GetGamesAsync();
    }

    private string GetDeleteModalId(GameSummary game)
    {
        return $"#{DeleteGame.GetModalId(game)}";
    }
}
